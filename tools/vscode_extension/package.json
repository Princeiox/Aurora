{
    "name": "aurora-lang",
    "displayName": "Aurora",
    "description": "Language support for Aurora - The friendliest language for beginners.",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "aurora",
                "aliases": [
                    "Aurora",
                    "aurora"
                ],
                "extensions": [
                    ".aurora"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "aurora",
                "scopeName": "source.aurora",
                "path": "./syntaxes/aurora.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "aurora",
                "path": "./snippets/snippets.json"
            }
        ]
    }
}